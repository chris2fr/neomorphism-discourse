{{#if showFooter}}
  <div class="wrap">
    <div class="flexbox">
      <div class="first-box">
        <div class="heading">
         <img src="https://community.blockstudy.app/uploads/default/original/1X/48acca0b1e6bb221c6cfec156c40b1aed0c68041.png" class="card-img-top" alt="..." height="84px">
            {{!-- <img src="{{mainHeading}}" class="card-img-top" alt="Logo" height="84px"> --}}
        </div>
        <div class="blurb">
          {{blurb}}
        </div>
         <div class="social">
          {{#each socialLinks as |link|}}
            <a class="social-link {{link.className}}" title="{{link.title}}" target="{{link.target}}" href="{{link.href}}">{{d-icon link.icon}}</a>
          {{/each}}
        </div>
      </div>
      <div class="second-box">
        <div class="links">
          {{#each linkSections as |section|}}
            <div class="list">
              <span class="{{section.className}}" title="{{section.title}}">
                {{section.text}}
              </span>
              <ul>
                {{#each section.childLinks as |link|}}
                  <li class="footer-section-link-wrapper {{link.className}}">
                    <a class="footer-section-link" title="{{link.title}}" href="{{link.href}}" target="{{link.target}}">
                      {{link.text}}
                    </a>
                  </li>
                {{/each}}
              </ul>
            </div>
          {{/each}}
        </div>
      </div>
      <div class="third-box">
        <div class="footer-links">
          {{#each smallLinks as |link|}}
              <a class="small-link {{link.className}}" title="{{link.title}}" target="{{link.target}}" href="{{link.href}}">{{link.text}}</a>
          {{/each}}
        </div>
      <div class="social">
        <a class="footer-links">Made with️ ❤️ in India © 2021 BlockStudy</a>
      </div>
      </div>
    </div>
  </div>
{{/if}}